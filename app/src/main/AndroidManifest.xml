<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.topanlabs.githubuser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.topanlabs.githubuser.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.topanlabs.githubuser.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:name=".UserApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUser"
        android:usesCleartextTraffic="true">
        <provider
            android:name=".provider.UserProvider"
            android:authorities="com.topanlabs.githubuser"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.topanlabs.githubuser.READ_DATABASE"
            android:writePermission="com.topanlabs.githubuser.WRITE_DATABASE"></provider>

        <receiver
            android:name=".broadcast.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".SettingActivity" />
        <activity android:name=".FavoriteActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailActivity" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>